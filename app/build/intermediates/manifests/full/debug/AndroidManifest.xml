<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.com.mucontact"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:name="pe.com.mucontact.MuContactApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pe.com.mucontact.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pe.com.mucontact.activities.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:label="@string/title_activity_main" />
        <activity
            android:name="pe.com.mucontact.activities.AboutRewardActivity"
            android:label="@string/title_activity_about_reward"
            android:parentActivityName="pe.com.mucontact.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.mucontact.activities.MainActivity" />
        </activity>
        <activity
            android:name="pe.com.mucontact.activities.AboutCraftmanActivity"
            android:label="@string/title_activity_about_craftman"
            android:parentActivityName="pe.com.mucontact.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.mucontact.activities.MainActivity" />
        </activity>
        <activity
            android:name="pe.com.mucontact.activities.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="pe.com.mucontact.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.mucontact.activities.LoginActivity" />
        </activity>
        <activity
            android:name="pe.com.mucontact.activities.AddPublicationActivity"
            android:label="@string/title_activity_add_publication"
            android:parentActivityName="pe.com.mucontact.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.mucontact.activities.MainActivity" />
        </activity>
        <activity
            android:name="pe.com.mucontact.activities.AboutUserActivity"
            android:label="@string/title_activity_about_user"
            android:parentActivityName="pe.com.mucontact.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.mucontact.activities.MainActivity" />
        </activity>
    </application>

</manifest>